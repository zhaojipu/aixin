<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dialog_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_22"
            android:paddingTop="@dimen/dp_20"
            android:text="发现新版本..."
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_17" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/update_close" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <com.zds.base.upDated.view.ProgressView
            android:id="@+id/progressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="@dimen/dp_22"
        android:text="新版本特性：\n1.开户银行：江西银\n2.户姓名：小龙人\n3.子账户：621246000000000000\n4.户姓名：小龙"
        android:textColor="#444444"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_bg_selector_white_left_bottom"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="下次再说"
            android:textColor="#7ec059"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_1_5"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <TextView
            android:id="@+id/tv_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_bg_selector_white_right_bottom"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="立即更新"
            android:textColor="#7ec059"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>