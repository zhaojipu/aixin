<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:paddingLeft="@dimen/dp_19"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:textSize="@dimen/dp_16"
                android:textColor="#4BBA4D"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家/地区    中国"
                android:paddingLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_64"
                android:layout_marginLeft="@dimen/dp_19"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:background="#DCDCDC"
                android:layout_height="@dimen/dp_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:text="+86"
                        android:textSize="@dimen/sp_15"
                        android:paddingLeft="@dimen/dp_7"
                        />
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC"
                        />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:imeActionLabel="sign in"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_23"
                        android:paddingRight="@dimen/dp_23"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DCDCDC"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:gravity="center">
                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:text="图形码"
                        android:textSize="@dimen/sp_15"
                        android:paddingLeft="@dimen/dp_7"
                        />
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC"
                        />
                    <EditText
                        android:id="@+id/et_tuxing"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入图形验证码"
                        android:imeActionLabel="sign in"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_23"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/img_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_3" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DCDCDC"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:gravity="center">
                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:text="验证码"
                        android:textSize="@dimen/sp_15"
                        android:paddingLeft="@dimen/dp_7"
                        />
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC"
                        />
                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:imeActionLabel="sign in"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_23"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:background="#50999999" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="发送验证码"
                        android:textColor="#D63D1D"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DCDCDC"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:gravity="center">
                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:text="密码"
                        android:textSize="@dimen/sp_15"
                        android:paddingLeft="@dimen/dp_7"
                        />
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#DCDCDC"
                        />
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_41"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入密码 (6-16个字符)"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_23"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_12" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#DCDCDC"
                    />
                <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_weight="1"
                    android:background="@drawable/bor_login_4"
                    android:hint="请再次确认密码 "
                    android:imeActionLabel="sign in"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dp_23"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tosubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bor_btn_new_login"
                android:gravity="center_vertical|center_horizontal"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>