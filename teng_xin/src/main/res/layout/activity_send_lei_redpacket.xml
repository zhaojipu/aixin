<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_money_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="红包个数"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="0个"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:text="游戏倍数：1.6"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_money_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="总金额"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/et_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="输入金额"
                        android:inputType="number"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:minWidth="@dimen/dp_120"
                        android:textColor="@color/black_deep"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/glod"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fenwei"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="红包发布范围：10-500元"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_22"
                        android:text="设置扫雷"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_19" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_9"
                        android:text="雷数存在0-9"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_25"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rel_1"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_2"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_3"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rel_4"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="4"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_5"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_6"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="6"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rel_7"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="7"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_8"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="8"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_9"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43"
                            android:layout_marginLeft="@dimen/dp_35">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="9"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/rel_0"
                            android:layout_width="@dimen/dp_58"
                            android:layout_height="@dimen/dp_43">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/dilei" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/dp_14"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_19" />

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_12"
                android:text="点击数字一键发包"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_25"
                android:text="未领取的红包，将3分钟后退款"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
