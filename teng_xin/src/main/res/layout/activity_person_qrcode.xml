<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:id="@+id/ll_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bor_white_8"
        >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_63"
            android:src="@mipmap/img_default_avatar"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客3223"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/img_head"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_17"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/tv_name"
            android:textColor="#ADADAD"
            android:layout_toRightOf="@+id/img_head"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            />
        <ImageView
            android:id="@+id/img_code"
            android:layout_below="@+id/img_head"
            android:layout_width="@dimen/dp_222"
            android:layout_height="@dimen/dp_222"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫上面的二维码，加我爱聊"
            android:textSize="@dimen/sp_10"
            android:layout_below="@+id/img_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_77"
            />

    </RelativeLayout>


</LinearLayout>
