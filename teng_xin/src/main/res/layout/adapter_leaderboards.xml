<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/ll_liebiao_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_116"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_no_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:background="@drawable/bor_leaderboards"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="NO.1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                >

                <View
                    android:layout_width="@dimen/dp_170"
                    android:layout_height="@dimen/dp_39"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="@mipmap/img_head_show_"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_view_1"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:src="@mipmap/img_default_avatar"
                    />

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_72"
                    android:background="#fedd40"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_70"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_username_"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:gravity="center_vertical"
                        android:maxWidth="@dimen/dp_90"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#818181"
                        android:textSize="@dimen/sp_17"
                        />

                    <TextView
                        android:id="@+id/tv_jignyan_"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:gravity="center_vertical"
                        android:text="积分：0"
                        android:textColor="#818181"
                        android:textSize="@dimen/sp_17"
                        />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_17"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_11"
                    android:background="@mipmap/img_head_show"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_add_1"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bor_add_f"
                android:gravity="center"
                android:text="加好友"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_13"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_liebiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bor_leaderboards"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="NO.1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_view"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/img_default_avatar"
                />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dp_2"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#818181"
                    android:textSize="@dimen/sp_17"
                    />

                <TextView
                    android:id="@+id/tv_jignyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingTop="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="积分：0"
                    android:textColor="#818181"
                    android:textSize="@dimen/sp_17"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bor_add_f"
                android:gravity="center"
                android:text="加好友"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_13"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
