<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_itease_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_59"
                android:background="#fff"
                android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="@dimen/dp_59"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <com.haoniu.aixin.widget.EaseImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/ease_unread_count_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_100"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_toRightOf="@id/avatar_container"
        android:textColor="@color/list_itease_primary_color"
        android:textSize="@dimen/sp_16"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/list_itease_secondary_color"
        android:textSize="@dimen/sp_13"/>

    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_toRightOf="@id/avatar_container"
        android:src="@drawable/ease_msg_state_fail_resend"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mentioned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/msg_state"
        android:paddingBottom="@dimen/dp_7"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_7"
        android:text="@string/were_mentioned"
        android:textColor="#e84e40"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/time"
        android:layout_toRightOf="@id/mentioned"
        android:ellipsize="end"
        android:minHeight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/list_itease_secondary_color"
        android:textSize="@dimen/sp_14"/>

</RelativeLayout>