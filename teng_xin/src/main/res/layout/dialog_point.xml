<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_262"
        android:layout_height="wrap_content"
        android:background="@drawable/bor_white_top_15"
        android:minHeight="@dimen/dp_294"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_hb_bg"
            android:gravity="center"
            android:text="踩雷红包"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/tv_money"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/border_edit"
            android:gravity="center"
            android:hint="请输入金额"
            android:inputType="number"
            android:maxLength="12"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:singleLine="true"
            android:textColor="#efaa65"
            android:textColorHint="#efaa65"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/tv_leiding"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/border_edit"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="请输入雷点"
            android:inputType="number"
            android:maxLength="1"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:singleLine="true"
            android:text=""
            android:textColor="#efaa65"
            android:textColorHint="#efaa65"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#e0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_queding"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shap_white"
                android:gravity="center"
                android:text="确定"
                android:textColor="#f04541"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shap_white"
                android:gravity="center"
                android:text="取消"
                android:textColor="#848484"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>