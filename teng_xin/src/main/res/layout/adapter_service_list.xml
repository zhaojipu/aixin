<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="?android:attr/selectableItemBackground"
        >

        <com.haoniu.aixin.widget.EaseImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_2_5"
            android:background="@drawable/point_red"
            android:gravity="center"
            android:minWidth="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_16"
            android:layout_toRightOf="@id/img_head"
            android:text="客服小红"
            android:textColor="#282828"
            android:textSize="@dimen/sp_14"
            />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0_5"
        android:background="#e9e9e9"
        />

</LinearLayout>
