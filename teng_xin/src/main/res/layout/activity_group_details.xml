<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFF4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:visibility="gone"
                android:gravity="center"
                >

                <RelativeLayout
                    android:id="@+id/rl_group_notice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:background="?selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/head_group"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:src="@mipmap/img_default_avatar"
                            />

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dip"
                                android:text="房间公告"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/sp_18"
                                android:typeface="serif"/>

                            <TextView
                                android:id="@+id/tv_group_notice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:ellipsize="end"
                                android:hint="房主还未设置"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/dp_20"
                                android:textSize="@dimen/sp_14"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@mipmap/img_back_right"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15dip"
                        android:text="房间成员"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/group_num"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/sp_16"/>

                        <LinearLayout
                            android:id="@+id/ll_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="更多成员"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_20"
                                android:src="@mipmap/img_back_right"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_13"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#EFEFF4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="@dimen/dp_30"
                android:background="#EFEFF4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_room_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="房间 ID"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_room_id"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rl_group_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="房间名称"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_120"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_group_id"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                >

                <RelativeLayout
                    android:id="@+id/rl_group_tjm"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="房间号"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_group_tjm"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black_deep"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/group_ewm"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="说明"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@mipmap/img_back_right"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_shuoming"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="玩法说明"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@mipmap/img_back_right"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_set"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:visibility="gone"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/group_set"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="玩法设置"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@mipmap/img_back_right"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_notices"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:visibility="gone"
                android:background="?selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="消息免打扰"
                        android:textColor="@color/black_deep"
                        android:textSize="@dimen/sp_18"/>

                    <com.haoniu.aixin.widget.EaseSwitchButton
                        android:id="@+id/switch_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        >
                    </com.haoniu.aixin.widget.EaseSwitchButton>

                    <ImageView
                        android:id="@+id/img_to_right_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@mipmap/img_back_right"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/img_to_right_2"
                        android:text="修改"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_room_set"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/white"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dip"
                        android:text="房间设置"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_18"
                        android:typeface="serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text=""/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_20"
                            android:src="@mipmap/img_back_right"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:background="#EFEFF4"/>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_exit"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:background="?selectableItemBackground"
                >

                <TextView
                    android:id="@+id/tv_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_redgray5"
                    android:gravity="center"
                    android:text="退出群组"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18"
                    android:typeface="serif"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>