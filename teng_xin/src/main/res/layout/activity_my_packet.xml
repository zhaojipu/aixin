<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

       <ImageView
           android:layout_width="@dimen/dp_91"
           android:layout_height="@dimen/dp_91"
           android:layout_marginTop="@dimen/dp_23"
           android:src="@mipmap/img_new_lingqian"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:text="零钱"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#323232"
            />


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="￥23.98"
            android:textColor="#323232"
            android:textSize="@dimen/sp_30"
            />
        <LinearLayout
            android:id="@+id/ll_cz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_32"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充值"
                android:background="@drawable/bg_border_new_chongzhi"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_19"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                android:gravity="center"
                android:text="兑换"
                android:background="@drawable/bg_border_new_tixian"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_10"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_new_duihuan"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="正在兑换"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_15"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_1"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_new_yinhangka"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="银行卡"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_15"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_1"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_new_alipay"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="支付宝"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_15"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
