<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_234"
    android:layout_height="@dimen/dp_344"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/dp_234"
        android:layout_height="@dimen/dp_344"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_294"
            android:background="@drawable/bor_white_8"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#f3a0a0"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:text="请输入拒绝的理由"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start"
                android:hint="请输入拒绝内容"
                android:minHeight="@dimen/dp_200"
                android:padding="@dimen/dp_10"
                android:textColor="#77787a"
                android:textColorHint="#77787a"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_border_refuse"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_40"
                android:paddingRight="@dimen/dp_40"
                android:text="确认拒绝"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/img_close"
            />

    </LinearLayout>
</LinearLayout>