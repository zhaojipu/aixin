<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/img_open_red_packet"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.haoniu.aixin.widget.EaseImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_70"
                android:src="@mipmap/img_default_avatar" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text=""
                android:textColor="#DBBC83"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_3"
                android:text="发了一个红包，金额随机"
                android:textColor="#DBBC83"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="恭喜发财，大吉大利"
                android:textColor="#DBBC83"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:id="@+id/rel_open"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50">

                <ImageView
                    android:id="@+id/img_open"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_red_open" />

                <ImageView
                    android:id="@+id/img_opening"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_hb_open"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_red_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15"
                android:text="查看红包详情"
                android:textColor="#DBBC83"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_closes"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" />
    </RelativeLayout>
</RelativeLayout>
