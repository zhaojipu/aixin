<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_13"
    >

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        >

        <com.haoniu.aixin.widget.EaseImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_avatar"
            />

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_87"
            android:layout_below="@+id/tv_userid"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@mipmap/img_red_packet_right"
            >

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical|left"
                android:maxLength="20"
                android:maxLines="1"
                android:text="恭喜发财，大吉大利"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/tv_hongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:text="领取红包"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/wlhb"
                android:textSize="@dimen/sp_11"
                />

            <TextView
                android:id="@+id/tv_time_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_80"
                android:paddingBottom="@dimen/dp_5"
                android:text="5分钟有效"
                android:textSize="@dimen/dp_11"
                />

            <ImageView
                android:id="@+id/msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_60"
                android:clickable="true"
                android:src="@drawable/ease_msg_state_failed_resend"
                android:visibility="gone"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_chatcontent"
            android:text="@string/text_delivered_msg"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>